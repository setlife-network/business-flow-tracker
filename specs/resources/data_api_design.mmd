classDiagram
    class Project{
        +title: str
        +description: str
        +thumbnail: ImageField
    }
    class Service{
        +title: str
        +description: str
    }
    class ConsultationRequest{
        +name: str
        +email: EmailField
        +project_description: TextField
        +budget: DecimalField
    }
    class PortfolioPage{
        +projects: List[Project]
    }
    class ServicesPage{
        +services: List[Service]
    }
    class ContactPage{
        +form: ConsultationRequestForm
    }
    class ConsultationRequestForm{
        +name: CharField
        +email: EmailField
        +project_description: TextField
        +budget: DecimalField
    }
    Project "1" -- "1" PortfolioPage: belongs to
    Service "1" -- "1" ServicesPage: belongs to
    ConsultationRequest "1" -- "1" ContactPage: belongs to
    ConsultationRequestForm "1" -- "1" ContactPage: has
